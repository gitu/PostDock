#!/usr/bin/env bash
set -e
echo ">>> Waiting for local postgres server start..."
WAIT_LOCAL_POSTGRES=$(($REPMGR_WAIT_POSTGRES_RECOVERY_TIMEOUT + $REPMGR_WAIT_POSTGRES_START_TIMEOUT))
wait_db $CLUSTER_NODE_NETWORK_NAME $REPLICATION_PRIMARY_PORT $REPLICATION_USER $REPLICATION_PASSWORD $REPLICATION_DB $WAIT_LOCAL_POSTGRES
sleep "$WAIT_SYSTEM_IS_STARTING"
